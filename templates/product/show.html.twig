{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Product Details</h1>
    <div class="mb-4">
        <a href="{{ path('app_product_index') }}" class="btn btn-dark">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>

    </div>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th scope="row">Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th scope="row">Price</th>
                <td>${{ product.price }}</td>
            </tr>
            <tr>
                <th scope="row">Stock Quantity</th>
                <td>{{ product.stockQuantity }}</td>
            </tr>
            <tr>
                <th scope="row">Created Datetime</th>
                <td>{{ product.createdDatetime ? product.createdDatetime|date('Y-m-d H:i:s', 'Asia/Singapore') : '' }}
                </td>
            </tr>
        </tbody>
    </table>


</div>
{% endblock %}